								<li><a href="/home/profile/changepwd/"><i class="lnr lnr-cog"></i> <span>Change Password</span></a></li>
								<li><a href="/home/user/logout"><i class="lnr lnr-exit"></i> <span>Logout</span></a></li>								
							</ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- END NAVBAR -->
      <!-- LEFT SIDEBAR -->
      <div id="sidebar-nav" class="sidebar">
        <div class="sidebar-scroll">
          <nav>
            <ul class="nav">
              <li>
                <a href="/home/"
                  ><i class="lnr lnr-home"></i> <span>Dashboard</span></a
                >
              </li>
              <li>
                <a href="/project" class=""
                  ><i class="lnr lnr-list"></i> <span>All Projects</span></a
                >
              </li>
              <li>
                <a href="/project/self" class=""
                  ><i class="lnr lnr-pushpin"></i> <span>Your Projects</span></a
                >
              </li>
              <li>
                <a href="/home/student/profile" class=""
                  ><i class="lnr lnr-user"></i><span>Profile</span></a
                >
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <!-- END LEFT SIDEBAR -->
      <!-- MAIN -->
      <div class="main">
        <div class="main-content">
          <div class="container-fluid" id="notif-pos">
            <!-- Success notification -->
            
            
            <div class="panel">
              <div class="panel-heading">
                <h3>Change Password</h3>
              </div>
              <div class="panel-body">
                <form
                  id="description"
                  method="POST"
                  action="/auth/student/changepwd/"
                >
                 Old Password &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:
                  <input type = "password" name = "oldPassword" id ="oldp"/>
                <br>
                <br>
                New Password &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:
                  <input type = "password" name = "newPassword" id = "newp"/>
                  <br>
                  <br>
                Confirm Password &nbsp;&nbsp;:
                  <input type ="password" name = "confpass" id = "confp"/>
                  <br>
                  <br>
                  Show Password:
                  <input type = "checkbox" id = "chk">
                  <br>
                  <br>
                  <button type="submit" class="btn btn-success">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END MAIN -->
      <div class="clearfix"></div>
      <footer>
        <div class="container-fluid">
          <p class="copyright">
            &copy; Academics and Career Council, IIT Kanpur
          </p>
        </div>
      </footer>
    </div>
    <!-- END WRAPPER -->
    <!-- Javascript -->
    <script src="/dash/assets/vendor/jquery/jquery.min.js"></script>
    <script src="/dash/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="/dash/assets/vendor/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/dash/assets/scripts/klorofil-common.js"></script>
    <script>
      
      function successAlert(data)
      {
        return `<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><i class="fa fa-check-circle"></i>`+ data+`</div>`;
      }
      function infoAlert(data)
      {
        return `<div class="alert alert-info alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><i class="fa fa-info-circle"></i>`+data+`</div>`;
      }
      

      const form = document.querySelector("#description");
      const container = document.querySelector("#notif-pos");

      var checkbox = document.getElementById("chk");
      checkbox.addEventListener( 'change', function() {
         if(this.checked) {
          document.getElementsByTagName("input")[0].setAttribute("type", "text");
          document.getElementsByTagName("input")[1].setAttribute("type", "text");
          document.getElementsByTagName("input")[2].setAttribute("type", "text");

          

        } else {
          document.getElementsByTagName("input")[0].setAttribute("type", "password");
          document.getElementsByTagName("input")[1].setAttribute("type", "password");
          document.getElementsByTagName("input")[2].setAttribute("type", "password");

        }
        });

      form.addEventListener("submit", e => {
        e.preventDefault();
        if(document.getElementsByTagName("input")[1].value == document.getElementsByTagName("input")[2].value)
        {
        $.ajax({
          url: "/auth/student/changepwd",
          method: "POST",
          data: { oldPassword: $("#oldp").val(), newPassword:$("#newp").val() },
          success: (data, status, xhr) => {
            $(container).prepend(successAlert(data));
            form.reset();
          },
          error:function(xhr, ajaxOptions, thrownError)
            {
                 // error report
            $(container).prepend(infoAlert(xhr.responseText));
                
            }
        });
      }
      else{
        alert("Confirm Password and New Password not same");
      }
      });
    </script>
  </body>
</html>
