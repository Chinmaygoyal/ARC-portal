      <!-- END LEFT SIDEBAR -->
      <!-- MAIN -->
      <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
          <div class="container-fluid">
            <!--CRAETE PROJECT -->
            <!-- <div class="row">
              <div class="col-md-4"> -->
            <div class="panel page-form">
              <div class="panel-heading">
                <h2>Create a new project</h2>
              </div>

              <div class="panel-body">
                <div class="form">
                  <form
                    id="uploadForm"
                    enctype="multipart/form-data"
                    action="/project/createproject"
                    method="POST"
                  >
                    <div class="form-group">
                      <label>Title<font color="red">*</font></label>
                      <input
                        type="text"
                        class="form-control"
                        name="title"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label
                        >Number Of Openings<font color="red">*</font></label
                      >
                      <input
                        type="number"
                        class="form-control"
                        name="no_openings"
                        min="1"
                        max="100"
                        required
                      />
                    </div>
                    <div class="form-group">
                      <label>Description</label>
                      <input
                        type="text"
                        class="form-control"
                        name="description"
                      />
                    </div>
                    <div class="form-group">
                      <label>Pre Requisites </label>
                      <input
                        type="text"
                        class="form-control"
                        name="pre_requisites"
                      />
                    </div>
                    <div class="form-group">
                      <label>CPI Eligibility Criteria</label>
                      <input
                        type="number"
                        class="form-control"
                        name="eligibility"
                        min="0"
                        max="10"
                        step="0.1"
                      />
                    </div>
                    <div class="form-group">
                      <label>Duration (In months)</label>
                      <input
                        type="number"
                        class="form-control"
                        name="duration"
                        min="0"
                        step="1"
                      />
                    </div>
                    <font color="red">*</font> marked fields must be filled.
                    <br />
                    <br />
                    <input type="file" name="projectfile" />
                    <div class="text-right">
                      <button
                        type="submit"
                        class="btn btn-primary mx-auto form-submit-btn"
                      >
                        Submit
                      </button>
                    </div>
                  </form>
                  <!-- </div>
                  </div> -->
                </div>
              </div>
            </div>
            <!-- CREATE PROJECT -->
          </div>
        </div>
        <!-- END MAIN CONTENT -->
      </div>
